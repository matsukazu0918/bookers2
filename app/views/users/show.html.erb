<%= render 'users/list', user: @users, book: @book %>
	    <div class="col-lg-9">
	    	<h1>Books</h1>
	    	<table class="table table-striped">
			    <tr>
					<th colspan="1"></th>
					<th class=title>Title</th>
					<th class=bpdy>Opinion</th>
				</tr>
				<% @books.each do |book| %>
				<tr>
					<td class="image"><%= attachment_image_tag book.user, :profile_image, style: "width: 50px; height: 50px;", fallback: "no_image.png" %></td>
					<td class=title>
					  <%= link_to book_path(book) do %>
						<%= book.title %>
					  <% end %>
					</td>
					<td class=body><%= book.body %></td>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>