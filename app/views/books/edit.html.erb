
<div class="col-md-6 col-md-offset-3">
	<% if flash[:update] %>
      <p class="error"><%= flash[:update] %></p>
    <% end %>
	<% if @book.errors.any? %>
	  <div class="alert alert-warning">
	    <ul>
	      <% @book.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>
	<h1>Editing Book</h1>
    <%= form_for (@book) do |f| %>

        <p class="new-title">Title</p>
        <%= f.text_field :title, class:"col-lg-12" %>
        <p class="new-body">Opinion</p>
        <%= f.text_area :body, class:"col-lg-12" %>

        <p class="create"><%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %></p>
        <p><%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', books_path %></p>


    <% end %>
</div>